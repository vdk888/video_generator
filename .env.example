# Bubble Video Engine - Environment Configuration

# === Required API Keys ===

# Pexels - Stock video footage
PEXELS_API_KEY=your_pexels_api_key_here

# OpenRouter - LLM script generation and OpenAI TTS
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=gpt-4o-mini

# === TTS Provider Selection ===
# Options: "openai" (default), "elevenlabs", "edge"
TTS_PROVIDER=openai

# === ElevenLabs TTS (Premium) ===
# Get your API key from: https://elevenlabs.io/
# Uncomment and set if using TTS_PROVIDER=elevenlabs
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL  # Bella (French female, default)

# === Music Configuration ===
MUSIC_MOOD=ambient_cinematic
ENABLE_BACKGROUND_MUSIC=true

